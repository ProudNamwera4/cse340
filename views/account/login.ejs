<h1>
    <%= title %>
     <form id="login_form" action="/account/login" method="post">
        <label for="account_email">Email: </label>
        <input id="account_email" type="email" required value="<%= locals.account_email %>">
        <input id="account_password" type="text" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <span>
            Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special
            character
        </span>
        <button type="submit">LOGIN</button>
        <p id="signup">No Account? <a href="/account/registration">Sign-up Now!</a></p>
     </form> 